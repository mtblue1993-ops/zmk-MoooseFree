    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-charlieplex";
        gpios
            = <&xiao_d 9 GPIO_ACTIVE_HIGH>
            , <&xiao_d 1 GPIO_ACTIVE_HIGH>
            , <&xiao_d 2 GPIO_ACTIVE_HIGH>
            , <&xiao_d 3 GPIO_ACTIVE_HIGH>
            , <&xiao_d 7 GPIO_ACTIVE_HIGH>
            , <&xiao_d 8 GPIO_ACTIVE_HIGH>
            , <&xiao_d 10 GPIO_ACTIVE_HIGH>
            ;
        wakeup-source;
        interrupt-gpios = <&gpio1 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
    };

    trackball_listener {
        compatible = "zmk,input-listener";
        device = <&trackball>;

        snipe_1 {
            layers = <ARROW>;
            input-processors = <&zip_xy_scaler 1 3>;
        };
        snipe_2 {
            layers = <NUM>;
            input-processors = <&zip_xy_scaler 1 3>;
        };
        scroller_1 {
            layers = <AHK>;
            input-processors = <&zip_xy_transform INPUT_TRANSFORM_Y_INVERT>,  <&zip_xy_scaler 1 30 >, <&zip_xy_to_scroll_mapper>;
        };
        scroller_2 {
            layers = <FUNCTION>;
            input-processors = <&zip_xy_transform INPUT_TRANSFORM_Y_INVERT>,  <&zip_xy_scaler 1 30 >, <&zip_xy_to_scroll_mapper>;
        };

    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        rows = <5>;
        columns = <12>;
        map = <
            RC(6,0)  RC(5,0)  RC(4,0)  RC(3,0)  RC(2,0)  RC(3,5)                    RC(0,1)
            RC(6,1)  RC(5,1)  RC(4,1)  RC(3,1)  RC(2,1)  RC(3,4)                    RC(0,2)
            RC(6,2)  RC(5,2)  RC(4,2)  RC(3,2)  RC(1,2)  RC(5,4)           RC(1,0)  RC(0,3)
            RC(6,3)  RC(5,3)  RC(4,3)  RC(2,3)                    RC(2,4)  RC(2,5)  RC(0,4)
                                                RC(1,3)  RC(6,4)  RC(1,4)  RC(1,5)  RC(0,5)
            RC(4,5)  RC(6,5)  RC(5,6)  RC(4,6)  RC(3,6)  RC(2,6)  RC(1,6)           RC(0,6)

            RC(7,1)                    RC(10,5)  RC(9,0)  RC(10,0)  RC(11,0)  RC(12,0)  RC(13,0)
            RC(7,2)                    RC(10,4)  RC(9,1)  RC(10,1)  RC(11,1)  RC(12,1)  RC(13,1)
            RC(7,3)  RC(8,0)           RC(12,4)  RC(8,2)  RC(10,2)  RC(11,2)  RC(12,2)  RC(13,2)
            RC(7,4)  RC(9,5)  RC(9,4)                     RC(9,3)   RC(11,3)  RC(12,3)  RC(13,3)
            RC(7,5)  RC(8,5)  RC(8,4)  RC(13,4)  RC(8,3)
            RC(7,6)           RC(8,6)  RC(9,6)   RC(10,6) RC(11,6)  RC(12,6)  RC(13,5)  RC(11,5)
        >;
    };

    right_encoder: encoder_right {
        compatible = "alps,ec11";
        a-gpios = <&gpio0 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&gpio0 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <24>;
        status = "disabled";
    };

    left_encoder: encoder_left {
        compatible = "alps,ec11";
        a-gpios = <&gpio0 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&gpio0 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <12>;
        status = "disabled";
    };

    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&left_encoder &right_encoder>;
        triggers-per-rotation = <12>;
    };
};

&xiao_i2c { status = "disabled"; };
&xiao_serial { status = "disabled"; };